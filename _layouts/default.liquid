<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page.title | default: site.title }}</title>
    
    
    <link rel="stylesheet" href="{{ '/assets/css/milligram.css' | relative_url }}">
    <link rel="stylesheet" href="{{ '/assets/css/normalize.css' | relative_url }}">
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="{{ '/feed.xml' | relative_url }}">
    
    
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-color:var(--bg);
      }
      
      body {
        padding: 2rem 2rem 0 2rem; /* padding: top, right, bottom (0), left */
      }
      
      
      #vanta-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
      }
      
      
      header, main {
        margin: 1rem 0;
      }
      
      
      
      /* Flex container for header controls */
      .header-controls {
        display: flex;
        align-items: center;
      }
      
      
      /* Popover styling for theme selector */
      .popover {
        position: relative;
        margin-left: 1rem;
      }
      
      
      .popover button {
        padding: 0.5rem 1rem;
      }
      
      
      .popover-list {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background: var(--bg);
        border: 1px solid var(--border);
        list-style: none;
        padding: 0.5rem;
        margin: 0;
        width: 150px;
        z-index: 10;
      }
      
      
      .popover-list li {
        margin: 0.3rem 0;
      }
      
      
      .popover-list li a {
        color: var(--text);
        text-decoration: none;
      }
      
      
      /* Button to toggle Vanta */
      #toggle-vanta {
        /* Float left in the header controls */
        margin-right: 1rem;
      }
      
      
      
      
      
      /* Navigation link spacing */
      .nav-link {
        margin: 2rem;
      }
      
      
      /* Dropdown styling */
      #theme-selector {
        color: var(--text);
        background-color: var(--input-bg);
        border: 1px solid var(--border);
        padding: 0.5rem;
      }
      
      
      /* Code block styling */
      code {
        background: var(--input-bg);
        color: var(--text);
        border: 1px solid var(--border);
        border-radius: 0.4rem;
        font-size: 0.9em;
        padding: 0.2rem 0.4rem;
      }
      
          
      
      /* Code block styling for preformatted blocks */
      pre {
        background: var(--input-bg);
        color: var(--text);
        --border: 1px solid var(--border);
        border-radius: 0.4rem;
        padding: 1rem;
        overflow: auto;
        white-space: pre-wrap;
        word-wrap: break-word;
      }
      
      
      /* Override Markdown list styling: remove default bullet and use a dash */
      ul {
        list-style: none;
        padding-left: 0;
      }
      
      
      ul li:before {
        content: "- ";
        color: var(--text);
      }
      
      
      /* Posts list styling */
      .posts-list li {
        margin-bottom: 1rem;
      }
    </style>
  </head>
  
  
  <body data-theme="{{ site.default_theme | default: '' }}">
    
    
    <div id="vanta-bg"></div>
    
    
    <header>
      <h1>{{ site.title }}</h1>
      <p>{{ site.description }}</p>
      <select id="theme-selector">
        <option value="gruvbox">Gruvbox</option>
        <option value="monokai">Monokai</option>
        <option value="dracula">Dracula</option>
        <option value="nord">Nord</option>
        <option value="solarized">Solarized</option>
        <option value="catppuccin">Catppuccin</option>
        <option value="tokyo-night">Tokyo Night</option>
        <option value="everforest">Everforest</option>
        <option value="">Light</option>
        <option value="cupcake">Cupcake</option>
      </select>
    </header>
    
    
    <main>
      {{ content }}
    </main>
    
    
    <!-- Three.js (approx. 600KB minified) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
    
    
    <!-- Vanta.js Dots (approx. 80KB minified) -->
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.dots.min.js"></script>
    
    
      <script>
      var vantaEffect;
      var vantaOn = true;
      
      
      function initVanta() {
        if (vantaEffect) vantaEffect.destroy();
        vantaEffect = VANTA.DOTS({
          el: "#vanta-bg",
          color: getComputedStyle(document.body).getPropertyValue('--button').trim() || 0x000000,
          backgroundColor: getComputedStyle(document.body).getPropertyValue('--bg').trim() || 0xffffff,
          scaleMobile: 1.00,
          showLines: false
        });
      }
      
      
      initVanta();
      
      
      document.getElementById('toggle-vanta').addEventListener('click', function() {
        if (vantaOn) {
          if (vantaEffect) vantaEffect.destroy();
          vantaOn = false;
          this.textContent = "Turn On Vanta";
        } else {
          initVanta();
          vantaOn = true;
          this.textContent = "Turn Off Vanta";
        }
      });
      
      
      var popoverBtn = document.getElementById('theme-popover-btn');
      var popoverList = document.getElementById('theme-popover-list');
      
      
      popoverBtn.addEventListener('click', function(e) {
        popoverList.style.display = (popoverList.style.display === "block") ? "none" : "block";
      });
      
      
      var themeLinks = popoverList.querySelectorAll('a');
      themeLinks.forEach(function(link) {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          var theme = this.getAttribute('data-theme');
          document.body.setAttribute('data-theme', theme);
          if (vantaOn) initVanta();
          popoverList.style.display = "none";
        });
      });
      
      
      // Optional: Hide popover when clicking outside
      document.addEventListener('click', function(e) {
        if (!popoverBtn.contains(e.target) && !popoverList.contains(e.target)) {
          popoverList.style.display = "none";
        }
      });
    </script>
  </body>
</html>